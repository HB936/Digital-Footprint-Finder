{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/index.js"
    },
    {
      "src": "/(.*)",
      "headers": {
        "Content-Security-Policy": "script-src 'self' blob: 'unsafe-inline';"
      },
      "dest": "/index.html"
    }
  ]
}
